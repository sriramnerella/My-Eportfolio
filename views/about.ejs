<%- include('partials/header') %>

<div class="container py-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h1 class="display-4 fw-bold">About Me</h1>
            <p class="lead text-muted">My background, skills, and experiences</p>
        </div>
    </div>

    <!-- Education Section -->
    <section class="mb-5">
        <div class="row">
            <div class="col-12">
                <h2 class="h3 mb-4">
                    <i class="fas fa-graduation-cap text-primary me-2"></i>
                    Education
                </h2>
            </div>
        </div>
        <div class="row">
            <% data.education.forEach(edu => { %>
            <div class="col-lg-6 mb-4">
                <div class="card h-100 hover-card">
                    <div class="card-body">
                        <h5 class="card-title text-primary"><%= edu.degree %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= edu.institution %></h6>
                        <p class="card-text">
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i><%= edu.year %>
                            </small>
                        </p>
                        <p class="card-text"><%= edu.description %></p>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </section>

    <!-- Skills Section -->
    <section class="mb-5">
        <div class="row">
            <div class="col-12">
                <h2 class="h3 mb-4">
                    <i class="fas fa-cogs text-primary me-2"></i>
                    Technical Skills
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="skills-container">
                            <% data.skills.forEach(skill => { %>
                            <span class="badge bg-primary skill-badge"><%= skill %></span>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Activities Section -->
   

    <!-- Call to Action -->
    <section class="text-center">
        <div class="card bg-primary text-white">
            <div class="card-body py-5">
                <h3 class="card-title mb-3">Let's Work Together</h3>
                <p class="card-text mb-4">Interested in collaboration or have a project in mind?</p>
                <a href="/contact" class="btn btn-light btn-lg">
                    <i class="fas fa-envelope me-2"></i>Get In Touch
                </a>
            </div>
        </div>
    </section>
</div>

<%- include('partials/footer') %>
