<%- include('partials/header') %>

<div class="container py-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h1 class="display-4 fw-bold">Achievements & Awards</h1>
            <p class="lead text-muted">Recognition for academic excellence and professional accomplishments</p>
        </div>
    </div>

    <!-- Achievements Section -->
    <section class="mb-5">
        <div class="row">
            <div class="col-12">
                <h2 class="h3 mb-4">
                    <i class="fas fa-trophy text-primary me-2"></i>
                    Awards & Recognition
                </h2>
            </div>
        </div>
        <div class="row">
            <% data.achievements.forEach((achievement, index) => { %>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 hover-card achievement-card">
                    <div class="card-body text-center">
                        <div class="achievement-icon mb-3">
                            <i class="fas fa-award fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title text-primary"><%= achievement.title %></h5>
                        <p class="card-text"><%= achievement.description %></p>
                        <div class="mt-auto">
                            <span class="badge bg-primary year-badge">
                                <i class="fas fa-calendar me-1"></i><%= achievement.year %>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </section>

    <!-- Work Samples Section -->
    <section class="mb-5">
        <div class="row">
            <div class="col-12">
                <h2 class="h3 mb-4">
                    <i class="fas fa-code text-primary me-2"></i>
                    Samples of Work
                </h2>
            </div>
        </div>
        <div class="row">
            <% data.workSamples.forEach(sample => { %>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 hover-card work-sample-card">
                    <div class="card-body d-flex flex-column">
                        <div class="work-sample-icon mb-3 text-center">
                            <% if (sample.type === 'GitHub') { %>
                                <i class="fab fa-github fa-3x text-dark"></i>
                            <% } else if (sample.type === 'Blog') { %>
                                <i class="fas fa-blog fa-3x text-primary"></i>
                            <% } else { %>
                                <i class="fas fa-external-link-alt fa-3x text-success"></i>
                            <% } %>
                        </div>
                        <h5 class="card-title text-center"><%= sample.title %></h5>
                        <p class="card-text text-center text-muted mb-3">
                            <span class="badge bg-secondary"><%= sample.type %></span>
                        </p>
                        <div class="mt-auto text-center">
                            <a href="<%= sample.link %>" target="_blank" class="btn btn-outline-primary">
                                <i class="fas fa-external-link-alt me-2"></i>View Sample
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </section>

    <!-- Skills Recognition -->
    <section class="mb-5">
        <div class="row">
            <div class="col-12">
                <h2 class="h3 mb-4">
                    <i class="fas fa-certificate text-primary me-2"></i>
                    Certifications & Skills
                </h2>
            </div>
        </div>
        <div class="row">

             <div class="col-lg-6 mb-4">
                <div class="card hover-card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-code text-success me-2"></i>
                            Data Science course from Code with Harry
                        </h5>
                        <p class="card-text">
                            Completed an intensive course covering data analysis, visualization, and machine learning using Python.
                        </p>
                        <span class="badge bg-success">Ongoing</span>
                    </div>
                </div>
            </div>

            
            <div class="col-lg-6 mb-4">
                <div class="card hover-card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-code text-success me-2"></i>
                            Full Stack Development
                        </h5>
                        <p class="card-text">Comprehensive knowledge in both frontend and backend technologies with hands-on project experience.</p>
                        <span class="badge bg-success">Ongoing</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="text-center">
        <div class="card bg-light">
            <div class="card-body py-5">
                <h3 class="card-title mb-3">Let's Build Something Amazing Together</h3>
                <p class="card-text mb-4">Ready to discuss your next project or explore collaboration opportunities?</p>
                <div>
                    <a href="/projects" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-code me-2"></i>View My Projects
                    </a>
                    <a href="/contact" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-envelope me-2"></i>Contact Me
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>

<%- include('partials/footer') %>
