<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Portfolio</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
    <!-- Admin Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/admin/dashboard">
                <i class="fas fa-shield-alt me-2"></i>Admin Dashboard
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/" target="_blank">
                    <i class="fas fa-external-link-alt me-1"></i>View Portfolio
                </a>
                <a class="nav-link" href="/admin/logout">
                    <i class="fas fa-sign-out-alt me-1"></i>Logout
                </a>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <!-- Success/Error Messages -->
        <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            <% if (success === 'message_deleted') { %>
                Message deleted successfully.
            <% } else if (success === 'resume_updated') { %>
                Resume updated successfully.
            <% } else { %>
                Operation completed successfully.
            <% } %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            <% if (error === 'delete_failed') { %>
                Failed to delete message. Please try again.
            <% } else if (error === 'upload_failed') { %>
                Failed to upload resume. Please try again.
            <% } else if (error === 'no_file') { %>
                No file selected. Please choose a PDF file.
            <% } else { %>
                An error occurred: <%= error %>
            <% } %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-cogs me-2"></i>Management
                        </h5>
                    </div>
                    <div class="list-group list-group-flush">
                        <a href="#messages" class="list-group-item list-group-item-action" data-bs-toggle="tab">
                            <i class="fas fa-envelope me-2"></i>Contact Messages
                            <% if (messages && messages.length > 0) { %>
                            <span class="badge bg-primary float-end"><%= messages.length %></span>
                            <% } %>
                        </a>
                        <a href="#uploads" class="list-group-item list-group-item-action" data-bs-toggle="tab">
                            <i class="fas fa-upload me-2"></i>File Uploads
                        </a>
                        <a href="#content" class="list-group-item list-group-item-action" data-bs-toggle="tab">
                            <i class="fas fa-edit me-2"></i>Content Management
                        </a>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <div class="tab-content">
                    <!-- Messages Tab -->
                    <div class="tab-pane fade show active" id="messages">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="fas fa-envelope me-2"></i>Contact Messages
                                </h5>
                                <span class="badge bg-info">
                                    <%= messages ? messages.length : 0 %> messages
                                </span>
                            </div>
                            <div class="card-body">
                                <% if (messages && messages.length > 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Message</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% messages.forEach(message => { %>
                                            <tr>
                                                <td>
                                                    <small class="text-muted">
                                                        <%= new Date(message.created_at).toLocaleDateString() %>
                                                        <br>
                                                        <%= new Date(message.created_at).toLocaleTimeString() %>
                                                    </small>
                                                </td>
                                                <td><strong><%= message.name %></strong></td>
                                                <td>
                                                    <a href="mailto:<%= message.email %>">
                                                        <%= message.email %>
                                                    </a>
                                                </td>
                                                <td>
                                                    <div style="max-width: 300px;">
                                                        <%= message.message.length > 100 ? 
                                                            message.message.substring(0, 100) + '...' : 
                                                            message.message %>
                                                    </div>
                                                    <% if (message.message.length > 100) { %>
                                                    <button class="btn btn-sm btn-outline-primary mt-1" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#messageModal<%= message.id %>">
                                                        View Full
                                                    </button>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="btn-group">
                                                        <a href="mailto:<%= message.email %>?subject=Re: Your portfolio inquiry" 
                                                           class="btn btn-sm btn-outline-primary">
                                                            <i class="fas fa-reply"></i>
                                                        </a>
                                                        <form action="/admin/delete-message/<%= message.id %>" 
                                                              method="POST" 
                                                              style="display: inline;"
                                                              onsubmit="return confirm('Are you sure you want to delete this message?')">
                                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>

                                            <!-- Message Modal -->
                                            <% if (message.message.length > 100) { %>
                                            <div class="modal fade" id="messageModal<%= message.id %>" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Message from <%= message.name %></h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p><strong>Email:</strong> <%= message.email %></p>
                                                            <p><strong>Date:</strong> <%= new Date(message.created_at).toLocaleString() %></p>
                                                            <hr>
                                                            <p style="white-space: pre-wrap;"><%= message.message %></p>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <a href="mailto:<%= message.email %>?subject=Re: Your portfolio inquiry" 
                                                               class="btn btn-primary">
                                                                <i class="fas fa-reply me-2"></i>Reply
                                                            </a>
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } %>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                <div class="text-center py-4">
                                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No messages yet</h5>
                                    <p class="text-muted">Contact form submissions will appear here.</p>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Uploads Tab -->
                    <div class="tab-pane fade" id="uploads">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fas fa-upload me-2"></i>File Uploads
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>Resume Upload</h6>
                                        <form action="/admin/upload-resume" method="POST" enctype="multipart/form-data">
                                            <div class="mb-3">
                                                <input type="file" class="form-control" name="resume" accept=".pdf" required>
                                                <div class="form-text">Upload a new PDF resume (max 5MB)</div>
                                            </div>
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-upload me-2"></i>Upload Resume
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Content Management Tab -->
                    <div class="tab-pane fade" id="content">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fas fa-edit me-2"></i>Content Management
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Content management features will be implemented in the next phase. 
                                    Currently, portfolio content is managed directly in the server code.
                                </div>
                                
                                <h6>Current Portfolio Data Preview:</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>Personal Info:</strong>
                                        <ul>
                                            <li>Name: <%= data.personal.name %></li>
                                            <li>Title: <%= data.personal.title %></li>
                                        </ul>
                                        
                                        <strong>Projects:</strong>
                                        <ul>
                                            <% data.projects.forEach(project => { %>
                                            <li><%= project.title %></li>
                                            <% }); %>
                                        </ul>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Skills:</strong>
                                        <ul>
                                            <% data.skills.slice(0, 5).forEach(skill => { %>
                                            <li><%= skill %></li>
                                            <% }); %>
                                            <% if (data.skills.length > 5) { %>
                                            <li><em>... and <%= data.skills.length - 5 %> more</em></li>
                                            <% } %>
                                        </ul>
                                        
                                        <strong>Achievements:</strong>
                                        <ul>
                                            <% data.achievements.forEach(achievement => { %>
                                            <li><%= achievement.title %> (<%= achievement.year %>)</li>
                                            <% }); %>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                if (alert.classList.contains('show')) {
                    alert.classList.remove('show');
                }
            });
        }, 5000);
        
        // Initialize tabs
        const triggerTabList = [].slice.call(document.querySelectorAll('a[data-bs-toggle="tab"]'));
        triggerTabList.forEach(function(triggerEl) {
            new bootstrap.Tab(triggerEl);
        });
        
        // Set active tab to messages by default
        document.addEventListener('DOMContentLoaded', function() {
            const messagesTab = document.querySelector('a[href="#messages"]');
            if (messagesTab) {
                messagesTab.click();
            }
        });
    </script>
</body>
</html>